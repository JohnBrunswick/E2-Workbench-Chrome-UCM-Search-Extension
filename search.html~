<!DOCTYPE html>
<html>
	<head>
		<link rel="stylesheet" type="text/css" href="style/style.css" />
		<link rel="stylesheet" type="text/css" href="style/tablestyle.css" />
		<script src="js/jquery.min.js"></script>
		<script src="js/jquery.oracle-ucm-1.0.js"></script>
		<script src="js/jquery.tablesorter.js"></script>
		<script src="js/jquery.tablesorter.pager.js"></script>
		<script>

		function pageload()
		{
			$("#optionnotice").hide();
			$("#optionlink").show();
			$("#keyword").focus();
			$.ucm.cgiPath = chrome.extension.getBackgroundPage().getItem('ucmCGIPath');
			if ($.ucm.cgiPath == "")
			{
				$("#optionlink").hide();
				$("#optionnotice").show();
				$("#searchbox").hide();
			}
		}

		function getOptions()
		{
			chrome.extension.getURL('options.html');
		}

		function search()
		{
			var searchTerm = $("input[name='keyword']").attr("value");
			var temp = $("#searchResults").html();
				$.ucm.quickSearch(searchTerm, function(ucmResponse) {
					// draw the results to the page
					var resultHtml = "";
					var searchResults = ucmResponse.ResultSets.SearchResults;
					for (var rowIndex in searchResults.rows) {
						var row = ucmResponse.getRow("SearchResults", rowIndex);
						resultHtml = resultHtml + "<tr><td><span class='links' onclick='openContent(" + row.dID + ");'>" + row.dDocName +
							"</span></td><td>" + row.dDocTitle + "</td><td>" + row.dDocAuthor + "</td><td><span onclick='viewContentDetail(" + row.dID + ");'><img src='img/InfoIcon_sm.gif'/></span></td></tr>\n";
					}
					$("#searchResults tbody").html(resultHtml);
					$("#searchResults").show();
					$("#searchResults").tablesorter(); 
				});
				return false;
		}

		function viewContentDetail(dDocID)
		{
			chrome.tabs.create({url: $.ucm.cgiPath + "?IdcService=DOC_INFO&dID=" + dDocID});
		}

		function openContent(dDocID)
		{
			chrome.tabs.create({url: $.ucm.cgiPath + "?IdcService=GET_FILE&dID=" + dDocID + "&allowInterrupt=1"});
		}

		</script>
	</head>
	<body onload="pageload()"> 

		<section id="wrapper"> 
			<header>
				<h3><img src="img/icon_24.png" style="vertical-align: bottom;"/> Oracle UCM Search</h3>
				<span id="optionnotice">
					To use this extension you must set your UCM server location<br/>
					<a href="options.html" class="navlink">Set Preference &gt;</a>
				</span>
				<span id="optionlink">
					<a href="options.html">Preferences <img src="img/wrench_24.png"  style="vertical-align: bottom;" border="0"/></a>
				</span>
			</header> 


		<div id="searchbox">
			<input type="text" name="keyword" id="keyword" /> <button onclick="search();">Go</button>
		</div>

		<table id="searchResults" title="Search Results" style="display: none" class="tablesorter">
			<thead>
				<tr><th>Content ID</th><th>Title</th><th>Author</th><th></th></tr>
			</thead>
			<tbody>
			</tbody>
		</table>

		</section>


	</body>
</html>
