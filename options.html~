<!DOCTYPE html>
<html>
	<head>
		<title>UCM Search Extension | Preferences</title>
		<link rel="stylesheet" type="text/css" href="style/style.css" />
		<script src="js/jquery.min.js"></script>

		<script>
			$(document).ready(function() {
				$('#status').fadeTo(0, 0);
			});
 
			function savePrefs() {  
		  		var myButton = document.getElementById('savebutton');
				localStorage.setItem('ucmCGIPath', $("input[name='cgipath']").attr("value"));
				
				$("#status").html("<img src='img/accepted_24.png' style='vertical-align: bottom;'/> Configuration successfully saved.");
				$('#status').fadeTo("slow", 1).animate({opacity: 1.0}, 3000).fadeTo("slow", 0);

				// Refresh the prefs that are displayed
				loadPrefs();
			}

			function loadPrefs() {
				  // when the page loads
				   if ( localStorage.getItem('ucmCGIPath') ) {
				  		$("#ucmCgiPathinfo").html("Current CGI Path: <span style='color:#000066'>" + localStorage.getItem('ucmCGIPath') + "</span>");
				   }
			}
		  
		</script> 
	</head>
	<body onload="loadPrefs()"> 

		<section id="wrapper"> 
			<header> 
				<h3><img src="img/icon_24.png" style="vertical-align: bottom;"/> Oracle UCM Search Preferences</h3> 
				<div id="status"></div>
			</header> 

			<div id="ucmCgiPathinfo">Current CGI Path for UCM: </div>
			<div id="prefnotice"></div>
			Set CGI Path <input type="text" name="cgipath" id="cgipath"  />
			<span class="hint">(e.g. http://yourservername/cs/idcplg)</span>
			<button class="prefButton" OnClick='savePrefs()'>Save Preference</button>
			<a href="search.html" class="navlink">&lt; Back to Search</a>
			<footer>
				Find more <a href="" onclick="chrome.tabs.create({url: 'http://www.johnbrunswick.com'});" style="color:#ff0000">WebCenter and UCM Samples on JohnBrunswick.com</a>
			</footer>

		</section>

	</body>
</html>
